@{
    ViewBag.Title = "Home";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/main.css">
}

@section scripts{
    <script src="~/Scripts/main.js"></script>
}

<nav id="menu">
    <img src="~/Content/Menu_Icons/menu_btn.png" alt="Menu button" id="menu_btn" class="btn">
    <a href='@Url.Action("Gallery", "Home")'> <img src="~/Content/Menu_Icons/gallery.png" alt="Gallery button" id="gallery" class="btn"> </a>
    <a href='@Url.Action("Downloads", "Home")'><img src="~/Content/Menu_Icons/downloads.png" alt="Downloads button" id="downloads" class="btn"> </a>
    <img src="~/Content/Menu_Icons/feedback.png" alt="Feedback button" id="feedback_btn" class="btn">
</nav>
<body>
    <div class="container-fluid">
        <div class="row" id="top">
            <div class="col-lg-6">
                <div>
                    <h1>Elena Shavarska</h1>
                    <p class="lead">Interactive resume</p>
                </div>
            </div>
        </div>

        <div class="row" id="profile">
            <div class="col-lg-4">
                <section id="about_me">
                    <h2>About me:</h2>
                    <p>
                        I am an Information Technology Student at New Bulgarian University specializing in Business Informatics.
                        People describe me as hardworking and reliable and I love working in a team I can rely on.
                        I have a strong interest for new technologies and a passion for constant improvement of both myself and the product I am working on.
                    </p>
                </section>
            </div>
            <div class="col-lg-4">
                <img src="~/Content/Images/profile_pic.png" alt="profile picture" class="center_pic">
            </div>
            <div class="col-lg-4">
                <section id="contact_info">
                    <h2>Contact me at:</h2>
                    <ul class="no_bullets">
                        <li>
                            <a href="mailto:e.shavarska@gmail.com" target="_blank">
                                <img src="~/Content/Images/mail.png" width="25" height="25">
                                <span>e.shavarska@gmail.com</span>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.linkedin.com/in/elena-shavarska/" target="_blank">
                                <img src="~/Content/Images/linkedin.png" width="25" height="25">
                                www.linkedin.com/in/elena-shavarska
                            </a>
                        </li>
                        <li>
                            <a href="https://github.com/eshavarska" target="_blank">
                                <img src="~/Content/Images/github.png" width="25" height="25">
                                https://github.com/eshavarska
                            </a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com/elly.shavarska/" target="_blank">
                                <img src="~/Content/Images/instagram.png" width="25" height="25">
                                www.instagram.com/elly.shavarska/
                            </a>
                        </li>
                        <li>
                            <a href="https://www.google.com/maps/place/Sofia" target="_blank">
                                <img src="~/Content/Images/location.png" width="25" height="25">
                                Sofia, Bulgaria
                            </a>
                        </li>
                    </ul>
                </section>
            </div>
        </div>

        <div class="row" id="work_experience">
            <div class="col-lg-6 heading">
                <h2>Work Experience</h2>
            </div>
            <div class="col-lg-6 contents">
                <h3>Microsoft 365 FastTrack SharePoint Subject Matter Expert</h3>
                <h4>CNX | September 2018 - December 2019</h4>
                <ul>
                    <li>
                        Assisted large companies in Europe with their onboarding process to Microsoft
                        365, specializing in SharePoint Online, but not exclusively.
                    </li>
                    <li>
                        Provided remote consultation regarding the technical migration process from
                        on-premise servers to the cloud.
                    </li>
                    <li>
                        Worked with both German and English speaking customers.
                    </li>
                </ul>
                <h3>Technical Support Specialist with German for Office 365 account</h3>
                <h4>Convergys Sofia | April 2017 - August 2018</h4>
                <ul>
                    <li>
                        Was part of the main technical support team for Office 365 for all German
                        speaking countries, specializing in SharePoint Online, Teams and Skype for
                        Business.
                    </li>
                </ul>
                <h3>First Level Technical Support</h3>
                <h4>Adecco Bulgaria | October 2015 - March 2017</h4>
                <ul>
                    <li>
                        Supported all HP products for several large companies for English and German
                        speaking customers.
                    </li>
                </ul>
            </div>
        </div>

        <div class="row" id="academic_history">
            <div class="col-lg-6 heading order-lg-2">
                <h2>Academic History</h2>
            </div>
            <div class="col-lg-6 contents order-lg-1">
                <h3>New Bulgarian University</h3>
                <h4>Information Technology | October 2018 - till now</h4>
                <ul>
                    <li>Specializing in Business Informatics</li>
                    <li>Strong interest in algorithms and optimization</li>
                </ul>
                <h3>91st German Language High School "Professor Konstantin Galabov"</h3>
                <h4>September 2010 - May 2015</h4>
                <ul><li>Graduated with both a Bulgarian and a German diploma.</li></ul>
            </div>
        </div>

        <div class="row" id="interests">
            <div class="col-lg-6 heading">
                <h2>Personal Interests</h2>
            </div>
            <div class="col-lg-6 contents">
                <h3>Photography</h3>
                <h3>Sports</h3>
                <h3>Art</h3>
            </div>
        </div>


        <div class="row" id="personal_skills">
            <div class="col-lg-6 heading order-lg-2">
                <h2>Personal skills</h2>
            </div>
            <div class="col-lg-6 contents order-lg-1">
                <ul class="no_bullets">
                    <li>Analytical thinking</li>
                    <li>Good problem-solving skills</li>
                    <li>Ambition for improvement</li>
                    <li>Fast learner</li>
                    <li>Organised and methodical</li>
                    <li>Always open for new challenges</li>
                </ul>
            </div>
        </div>


        <div class="row" id="professional_skills">
            <div class="col-lg-6 heading">
                <h2>Professional skills</h2>
            </div>
            <div class="col-lg-6 contents">
                <h3>Coding Languages:</h3>
                <p>Java, C++, HTML/CSS, JavaScript, PHP, C#, SQL</p>
                <h3>Languages:</h3>
                <p>Bulgarian, English, German, Russian</p>
            </div>
        </div>


        <div class="row" id="feedback">
            <div class="col-lg-6">
                <h2>Feedback and reviews:</h2>
                <form id="review_input" method="post" action="">
                    <fieldset>
                        <label for="fname">First and </label>
                        <label for="lname">last name:</label><br>
                        <input type="text" id="fname" name="firstname" required>
                        <input type="text" id="lname" name="lastname" required><br>
                        <label for="title">Review:</label><br>
                        <input type="text" id="title" name="title" placeholder="Title..." required><br>
                        <textarea form="review_input" name="text" maxlength="1500" placeholder="What do you think? ..." required></textarea>
                        <button id="submit" type="submit" form="review_input">Submit</button>
                    </fieldset>
                </form>

            </div>
            <a name="reviews"></a>
            <div class="col-lg-6">
                <div id="reviews">
                    @foreach (var entry in ViewBag.Entries)
                    {
                        <div class="review">
                            <h5 class="review_title">@entry.Title</h5>
                            <p class="review_text">@entry.Text</p>
                            <p class="review_names">@entry.FirstName @entry.LastName on @entry.DateAdded.ToLongDateString() @entry.DateAdded.ToShortTimeString()</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <footer>
    </footer>

</body>